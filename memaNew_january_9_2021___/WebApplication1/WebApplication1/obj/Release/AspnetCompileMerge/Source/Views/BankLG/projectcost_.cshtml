<table class="table table-bordered" id="drill1Table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Pait To</th>
            <th>Description</th>
            <th>Category</th>
            <th>Project</th>
            <th>V.Type</th>
            <th>B/O</th>
            <th>V.No</th>
            <th>Debit</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.ID</td>
                <td>@String.Format("{0:dd/MM/yyyy}", @item.Date)</td>
                @*<td>@item.Date</td>*@
                <td>@item.Paid_To</td>
                <td>@item.Description</td>
                <td>@item.Category</td>
                <td>@item.Project</td>
                <td>@item.Voucher_Type</td>
                <td>@item.Branch_Org</td>
                <td>@item.Voucher_No</td>
              
                <td>@String.Format("{0:#,0}", (item.Debit == null ? 0 : item.Debit))</td>

            </tr>
        }

    </tbody>
</table>

