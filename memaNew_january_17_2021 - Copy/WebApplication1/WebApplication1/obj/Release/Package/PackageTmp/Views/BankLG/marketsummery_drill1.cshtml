<table class="table table-bordered drillTable" id="drill1Table">
    <thead>
        <tr>
            <th>ID</th>
            <th style="width:11%">Date</th>
            <th>Vendor</th>
            <th>Description</th>
            <th>Cat.</th>
            <th>Project</th>
            <th>V.T</th>
