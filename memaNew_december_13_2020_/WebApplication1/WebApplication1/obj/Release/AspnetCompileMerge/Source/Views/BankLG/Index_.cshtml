@model IEnumerable<WebApplication1.Models.Usp_BankGL_Result>

<form id="columnnameshowhide" style="display:none">
    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="0" style="cursor: pointer;">S.no</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="1" style="cursor: pointer;">Date</a>
    </label>

    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="2" style="cursor: pointer;">Bank</a>
    </label>

    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="3" style="cursor: pointer;">Description</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="4" style="cursor: pointer;">Vendor</a>
    </label>
    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="5" style="cursor: pointer;">Project</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="6" style="cursor: pointer;">Categ</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="7" style="cursor: pointer;">cheq.no</a>
    </label>
    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="8" style="cursor: pointer;">Debit</a>
    </label>
    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="9" style="cursor: pointer;">Credit</a>
    </label>

    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="10" style="cursor: pointer;">Balance</a>
    </label>

</form>



<table class="table table-bordered" id="myTable">
    <thead>
        <tr>
            <th>S.no</th>
            <th>Date</th>
            <th>Bank</th>
            <th>Description</th>
            <th>Vendor</th>
            <th>Project</th>
            <th>Category</th>
            <th>Cheque_No</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
       
            @foreach (var item in Model)
            {
               
            <tr>
                <td>@item.id</td>
                <td>@String.Format("{0:dd/MM/yyyy}", @item.Date)</td>
                <td>@item.Bank</td>
                <td>@item.Description</td>
                <td>@item.Vendor</td>
                <td>@item.Project</td>
                <td>@item.Category</td>
                <td>@item.Cheque_No</td>
                <td>@String.Format("{0:#,0}", (item.Debit == null ? 0 : item.Debit))</td>
                <td>@String.Format("{0:#,0}", (item.Credit == null ? 0 : item.Credit))</td>
                <td>@String.Format("{0:#,0}", (item.Balance == null ? 0 : item.Balance))</td>

            </tr>
        }



    </tbody>
</table>


