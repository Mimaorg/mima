<table class="table table-bordered" id="myTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Vendor</th>
            <th>Description</th>
            <th>Category</th>
            <th>Project</th>
            <th>V.Type</th>
            <th>B/O</th>
            <th>V.No</th>
            <th>UV</th>
            <th>Debit</th>
            <th>Credit</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>@item.id</td>
                <td>@String.Format("{0:dd/MM/yyyy}", @item.Date)</td>
                @*<td>@item.Date</td>*@
                <td>@item.Vendor</td>
                <td>@item.Description</td>
                <td>@item.Category</td>
                <td>@item.Project</td>
                <td>@item.V_Type</td>
                <td>@item.B_O</td>
                <td>@item.V_No</td>
                <td>@item.UV</td>
                <td>@String.Format("{0:#,0}", (item.Debit == null ? 0 : item.Debit))</td>
                <td>@String.Format("{0:#,0}", (item.Debit == null ? 0 : item.Credit))</td>
                <td>@String.Format("{0:#,0}", (item.Debit == null ? 0 : item.Balance))</td>

            </tr>
        }

    </tbody>
</table>

