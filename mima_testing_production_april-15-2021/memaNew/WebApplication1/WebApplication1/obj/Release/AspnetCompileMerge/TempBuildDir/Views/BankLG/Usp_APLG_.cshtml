@*@model IEnumerable<WebApplication1.Models.Usp_APLG_Result>*@
<form>
    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="0" style="cursor: pointer;">S.no</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="1" style="cursor: pointer;">Date</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="2" style="cursor: pointer;">Vendor</a>
    </label>

    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="3" style="cursor: pointer;">Description</a>
    </label>

    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="4" style="cursor: pointer;">Project</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="5" style="cursor: pointer;">Categ</a>
    </label>
    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="6" style="cursor: pointer;">V.Type</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="7" style="cursor: pointer;">B/O</a>
    </label>
    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="8" style="cursor: pointer;">V.No</a>
    </label>

    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="9" style="cursor: pointer;">Debit</a>
    </label>

    <label class="checkbox-inline">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="10" style="cursor: pointer;">Credit</a>
    </label>

    <label class="checkbox-inline ">
        <input type="checkbox" value="" disabled><a class="toggle-vis columnhideShowCheckBox" data-column="11" style="cursor: pointer;">Balance</a>
    </label>
</form>

<table class="table table-bordered" id="myTable">
    <thead>
        <tr>
            <th>S.no</th>
            <th>Date</th>
            <th>Vendor</th>
            <th>Description</th>
            <th>Project</th>
            <th>Category</th>
            <th>Voucher_Type</th>
            <th>Branch_Org</th>
            <th>Voucher_No</th>
            <th>Debit</th>
            <th>Credit</th>
            @*<th>Balance</th>*@
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
            {

            <tr>
                <td>@item.ID</td>
                <td>@String.Format("{0:dd/MM/yyyy}", item.Date)</td>
                <td>@item.Paid_To</td>
                <td>@item.Description</td>
                <td>@item.Project</td>
                <td>@item.Category</td>
                <td>@item.Voucher_Type</td>
                <td>@item.Branch_Org</td>
                <td>@item.Voucher_No</td>
                <td>@String.Format("{0:#,0}", (item.Debit == null ? 0 : item.Debit))</td>
                <td>@String.Format("{0:#,0}", (item.Credit== null ? 0 : item.Credit))</td>
                @*<td>@String.Format("{0:#,0}", (item.Balance == null ? 0 : item.Balance))</td>*@
           
            </tr>
        }



    </tbody>
</table>



