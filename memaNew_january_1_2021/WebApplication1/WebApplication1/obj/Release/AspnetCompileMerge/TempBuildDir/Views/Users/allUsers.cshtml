    <!-- The Modal -->
    <div class="modal" id="usermodal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="" id="userForm">
                       <input type="hidden" name="User_ID" id="User_ID" value="0" />
                         <div class="form-group">
                            <label for="email">User Name:</label>
                            <input type="text" class="form-control" id="User_Name"  name="User_Name" required>
                        </div>
                        <div class="form-group">
                            <label for="pwd">Role:</label>
                            <input type="text" class="form-control" id="User_Role" name="User_Role" required>
                        </div>
                        <div class="form-group">
                            <label for="pwd">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" required>
                            
                            <label>Show Password<input type="checkbox" id="showhidepassword" /></label>
                           
                        </div>
                        <button type="button"  id="submitUsersData" class="btn btn-primary">Submit</button>
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {

            Datatable();
            //addEditUsers



            
            $("#submitUsersData").click(function () {
                debugger;
                var isEmpty = false;
                $("#userForm").find("input").each(function () {
                    debugger;

                    if ($(this).val() == "") {

                        $(this).css('border-color', 'red');
                        isEmpty = true;

                    } else {
                        $(this).css('border-color', 'white');

                    }

                })
                if (!isEmpty) { 
                var objforcontroller = $("#userForm").serialize();
               
                debugger;
                var async = false;
                var dataType = "JSON";
                var postType = "POST";
                var Controller = "Users";
                var Method = "addEditUsers"
                $.ajax({
                    type: postType,
                    url: "/" + Controller + "/" + Method,
                    datatype: dataType,
                    data: objforcontroller,
                    async: async,
                    success: function (d) {
                        $("#UsersList").html(d);
                        Datatable();
                    },

                    error: function (error) {
                        debugger;
                        console.log(error);
                    }
                });
            }
            })


           
            $("body").on("click", ".addedituser",function () {
                
                var id = $(this).attr("id");
                var objforcontroller = {};
                objforcontroller.id = id;
                debugger;
                var async = false;
                var dataType = "JSON";
                var postType = "POST";
                var Controller = "Users";
                var Method = "getDatabyid"
                $.ajax({
                    type: postType,
                    url: "/" + Controller + "/" + Method,
                    datatype: dataType,
                    data: objforcontroller,
                    async: async,
                    success: function (d) {
                        debugger;
                        if (d != "null") {
                            var a = JSON.parse(d);
                            $("#User_Name").val(a.User_Name);
                            $("#User_Role").val(a.User_Role);
                            $("#Password").val(a.Password);
                            $("#User_ID").val(a.User_ID);
                            
                            $("#usermodal").modal("show");
                        } else {
                            $("#User_Name").val("");
                            $("#User_Role").val("");
                            $("#Password").val("");
                            $("#User_ID").val("");
                            $("#usermodal").modal("show");
                        }
                        
                    },

                    error: function (error) {
                        debugger;
                        console.log(error);
                    }
                });
               

            })

            $('#showhidepassword').click(function () {
                if ($(this).prop("checked") == true) {
                    $("#Password").prop("type", "text");
                }
                else if ($(this).prop("checked") == false) {
                    $("#Password").prop("type", "password");
                }
            });
        })
